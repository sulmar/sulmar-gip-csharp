@page
@model RazorPagesWebApp.Pages.MembersModel
@using Models;

@{
}



<table class ="table table-hover table-light table-striped">
    <thead>
        <tr>
            <th>Firstname</th>
            <th>Company</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Date</th>
        </tr>
    </thead>

    <tbody>

        @foreach(Person member in Model.Members)
        {
            <tr>
                <td>@member.FirstName</td>
                <td>@member.Company</td>
                <td>@member.Position</td>
                <td>@member.Salary</td>
                <td>@member.Date</td>
            </tr>
        }
    </tbody>

    <tfoot>
        Wygenerowano @DateTime.Now
    </tfoot>
</table>